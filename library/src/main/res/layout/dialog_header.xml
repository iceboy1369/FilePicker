<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/colorHeader"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    tools:ignore="RtlHardcoded"
    android:layout_height="?android:listPreferredItemHeight">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:gravity="right|center_vertical"
        android:layout_gravity="center_vertical|right"
        tools:ignore="InefficientWeight">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null">

            <TextView
                android:id="@+id/dname"
                android:layout_marginStart="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                style="?android:attr/textViewStyle"
                android:background="@null"
                android:textColor="@color/textColorPrimary" />

            <TextView
                android:id="@+id/title"
                android:visibility="invisible"
                android:layout_marginStart="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:textSize="16sp"
                android:textStyle="bold"
                style="?android:attr/textViewStyle"
                android:background="@null"
                android:textColor="@color/textColorPrimary"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/dir_path"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            style="?android:attr/textViewStyle"
            android:background="@null"
            android:textColor="@color/textColorSecondary"/>
    </LinearLayout>

    <ImageView
        android:layout_marginEnd="@dimen/toolbar_image_margin"
        android:layout_marginRight="@dimen/toolbar_image_margin"
        android:layout_marginLeft="@dimen/toolbar_image_margin_left"
        android:layout_marginStart="@dimen/toolbar_image_margin_left"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@mipmap/ic_directory_parent"
        android:scaleType="centerInside"
        android:id="@+id/imageView"
        tools:ignore="ContentDescription" />

</LinearLayout>